<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1>Enter Your Place Details</h1>
  <%= simple_form_for @place do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <br />
<%= f.submit 'Create', :class => 'btn btn-primary' %>
  <% end %>
</div>
<h1>Comments</h1>

<% @place.comments.each do |comment| %>
  <div>
    <blockquote>
      <b><%= comment.rating %></b> -
        <%= comment.message %>
      <small><%= comment.user.email %></small>
    </blockquote>
  </div>
<% end %>